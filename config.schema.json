{
  "pluginAlias": "EmporiaEnergy",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Platform Name",
        "type": "string",
        "default": "Emporia Energy",
        "required": true
      },
      "username": {
        "title": "Emporia Email",
        "type": "string",
        "required": true,
        "format": "email",
        "description": "Your Emporia Energy account email address"
      },
      "password": {
        "title": "Emporia Password",
        "type": "string",
        "required": true,
        "description": "Your Emporia Energy account password"
      },
      "updateInterval": {
        "title": "Update Interval (seconds)",
        "type": "integer",
        "default": 60,
        "minimum": 10,
        "maximum": 300,
        "description": "How often to poll for energy usage updates (10-300 seconds)"
      },
      "exposeOutlets": {
        "title": "Expose Smart Outlets",
        "type": "boolean",
        "default": true,
        "description": "Expose Emporia smart outlets to HomeKit"
      },
      "exposeChargers": {
        "title": "Expose EV Chargers",
        "type": "boolean",
        "default": true,
        "description": "Expose Emporia EV chargers to HomeKit"
      },
      "exposeEnergyMonitoring": {
        "title": "Expose Energy Monitoring",
        "type": "boolean",
        "default": false,
        "description": "Add energy consumption characteristics (only available for Vue energy monitor devices, not smart outlets)"
      },
      "debug": {
        "title": "Enable Debug Logging",
        "type": "boolean",
        "default": false,
        "description": "Enable detailed debug logging"
      },
      "devices": {
        "title": "Device Customization",
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "deviceGid": {
              "title": "Device ID (GID)",
              "type": "integer",
              "required": true,
              "description": "The device GID from Emporia (visible in logs)"
            },
            "name": {
              "title": "Custom Name",
              "type": "string",
              "description": "Custom display name for this device"
            },
            "hide": {
              "title": "Hide Device",
              "type": "boolean",
              "default": false,
              "description": "Hide this device from HomeKit"
            }
          }
        }
      }
    },
    "required": ["name", "username", "password"]
  },
  "layout": [
    {
      "type": "flex",
      "flex-flow": "row wrap",
      "items": ["name"]
    },
    {
      "type": "fieldset",
      "title": "Emporia Account",
      "expandable": false,
      "items": ["username", "password"]
    },
    {
      "type": "fieldset",
      "title": "Device Options",
      "expandable": true,
      "expanded": false,
      "items": [
        "exposeOutlets",
        "exposeChargers",
        "exposeEnergyMonitoring"
      ]
    },
    {
      "type": "fieldset",
      "title": "Advanced Settings",
      "expandable": true,
      "expanded": false,
      "items": ["updateInterval", "debug"]
    },
    {
      "type": "fieldset",
      "title": "Device Customization",
      "expandable": true,
      "expanded": false,
      "description": "Customize individual devices by their Device ID (GID). Device IDs are shown in Homebridge logs when devices are discovered.",
      "items": [
        {
          "key": "devices",
          "type": "array",
          "orderable": false,
          "buttonText": "Add Device Override",
          "items": [
            "devices[].deviceGid",
            "devices[].name",
            "devices[].hide"
          ]
        }
      ]
    }
  ]
}
